<!DOCTYPE html>
<html>
<head>
  <title>PublicScreen</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>

<body onkeyup="readUnicode(event);">
	<div class="container">
		<%= yield %>
	</div>


	<script type="text/javascript">
	function readUnicode(e){
		var unicode=e.keyCode? e.keyCode : e.charCode;
		//alert(unicode);	
		switch(unicode)
		{
			case 75:
				window.location.href = '/dropbox/main';
			case 65:
				$('a.carousel-control.left').trigger('click');
				break;
			case 83:
				$('a.carousel-control.right').trigger('click');
				break;
			default:
				//do nothing for now
		}
	}
	</script>
</body>
</html>
